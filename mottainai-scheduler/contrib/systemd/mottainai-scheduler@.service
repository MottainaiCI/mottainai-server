[Unit]
Description=Mottainai Agent (Instance %i)
After=network-online.target

[Service]
WorkingDirectory=/srv/mottainai
ExecStart=/usr/bin/mottainai-scheduler scheduler --config /etc/mottainai/%i.yaml
User=mottainai-server
Group=mottainai
Restart=always
RestartSec=3
[Install]
WantedBy=network-online.target
