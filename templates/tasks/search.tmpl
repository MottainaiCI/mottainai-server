{{template "base/head" .}}
{{template "base/menu" .}}


<div class="col-lg-12">
   <div class="card">
       <div class="card-header">
          <strong class="card-title">Tasks in <span class="badge badge-pill badge-primary">{{.Status}}</span> status</strong>
       </div>
       <div class="card-body">
           <div class="alert alert-secondary fade show">
             <span class="badge badge-pill badge-secondary">Tip</span>
             Create a new task with json file: <code>mottainai-cli --master {{AppURL}} task create --json task.json</code><br>
           </div>
           <a href="{{BuildURI "/tasks/add"}}"><button class="pull-right btn btn-success btn-flat m-b-30 m-t-30">Create</button></a>
           {{template "tasks/single" .}}

       </div>
   </div>
</div>
<!-- /# column -->


{{template "base/footer" .}}
